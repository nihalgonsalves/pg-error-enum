  "compilerOptions": {
    "target": "es2020",
    // TODO: Also publish as ES Module?
    "module": "commonjs",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node"]
